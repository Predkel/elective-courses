<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="defaultLayout" template="/WEB-INF/views/defaultLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/header.jsp"/>
        <put-attribute name="body"/>
    </definition>

    <definition name="pagination" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/views/pagination.jsp"/>
        <put-attribute name="content"/>
    </definition>

    <definition name="main/students" extends="pagination">
        <put-attribute name="content" value="/WEB-INF/views/mainStudents.jsp" cascade="true"/>
    </definition>

    <definition name="main/teachers" extends="pagination">
        <put-attribute name="content" value="/WEB-INF/views/mainTeachers.jsp" cascade="true"/>
    </definition>

    <definition name="students/course" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/views/courseForStudent.jsp"/>
    </definition>

    <definition name="course/add" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/views/addCourseForm.jsp"/>
    </definition>

    <definition name="teachers/course" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/views/courseForTeacher.jsp"/>
    </definition>

    <definition name="login" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/views/authentication.jsp"/>
    </definition>

    <definition name="register" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/views/registration.jsp"/>
    </definition>
</tiles-definitions>